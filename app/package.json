{
  "name": "randomgen",
  "version": "1.0.0",
  "description": "Random generators for RPGs",
  "keywords": [
    "rpg",
    "random",
    "generators"
  ],
  "author": "Marcin Forseti Pa≈∫dziora",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forsetius/randomgen-nest2.git"
  },
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --report-unused-disable-directives --max-warnings 0 --fix",
    "test": "npm run tsc && cp --remove-destination --recursive templates dist && jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run tsc && cp --remove-destination --recursive templates dist && jest --config ./jest-e2e.config.json --runInBand --detectOpenHandles",
    "tsc": "tsc"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^5.1.2",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "nunjucks": "^3.2.4",
    "reflect-metadata": "0.1.14",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@tsconfig/node21": "^21.0.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.9",
    "@types/nunjucks": "^3.2.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "growl": "^1.10.5",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "node-notifier": "^10.0.1",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "eslintIgnore": [
    "dist/",
    "node_modules/"
  ],
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "npm run lint",
      "npm run format"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "pretty": true
  }
}
