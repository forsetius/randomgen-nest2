{
  "name": "randomgen",
  "version": "0.4.0",
  "description": "CMS for forseti.pl, Random generators for RPGs",
  "keywords": [
    "rpg",
    "random",
    "generators"
  ],
  "author": "Marcin Forseti PaÅºdziora",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forsetius/randomgen-nest2.git"
  },
  "private": true,
  "engines": {
    "node": ">=22.11.0"
  },
  "main": "dist/main.js",
  "scripts": {
    "prepare": "cd .. && husky app/.husky",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --report-unused-disable-directives --max-warnings 0 --fix",
    "test": "npm run tsc && jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run tsc && jest --config ./jest-e2e.config.json --runInBand --detectOpenHandles",
    "tsc": "tsc"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "akismet-api": "^6.0.0",
    "axios": "1.11.0",
    "bootstrap-icons": "^1.13.1",
    "compression": "^1.8.1",
    "helmet": "^8.1.0",
    "html-minifier-next": "^2.1.6",
    "luxon": "^3.7.2",
    "marked": "^15.0.12",
    "nodemailer": "^7.0.9",
    "nunjucks": "^3.2.4",
    "reflect-metadata": "0.1.14",
    "rxjs": "^7.8.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@nestjs/schematics": "^11.0.8",
    "@nestjs/testing": "^11.1.6",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/strictest": "^2.0.6",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/html-minifier-next": "^2.1.0",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.18.8",
    "@types/nodemailer": "^6.4.20",
    "@types/nunjucks": "^3.2.6",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --report-unused-disable-directives --max-warnings 0",
      "prettier --ignore-unknown --write"
    ]
  }
}
